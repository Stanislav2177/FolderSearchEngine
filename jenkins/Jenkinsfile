pipeline {
    agent {
        docker {
            image 'gradle:latest'
            args '-v /root/.gradle:/root/.gradle'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'gradle build'
            }
        }
        stage('Test') {
            steps {
                script {
                    // Run your tests using Gradle
                    sh './gradlew test'
                }
            }
        }
    }
}
