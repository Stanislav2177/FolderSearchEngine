pipeline {
    agent {
        docker {
            image 'gradle:latest'
            args '-v /root/.gradle:/root/.gradle'
        }
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building...'
                    sh 'gradle build'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    sh './gradlew test'
                }
            }
        }
    }
}
