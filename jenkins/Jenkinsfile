pipeline {
    agent {
        docker {
            image 'gradle:latest'
            args '-v /root/.gradle:/root/.gradle'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'gradle build'
            }
        }
        stage('Test') {
            steps {
                script {
                    // Run your tests using Gradle
                    sh './gradlew :FolderSearchEngine:test --tests "com.string.search.via.web.String.search.testService.FileSystemTraverseAndZipOpeningTest, com.string.search.via.web.String.search.testService.HtmlOpenerTest, com.string.search.via.web.String.search.testService.SearchEngineTest"'
                }
            }
        }
    }
}
